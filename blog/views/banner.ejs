    <style>
        .wrap {
            font-family: 'Do Hyeon', sans-serif;
            width: 900px;
            height : 1000px;
            margin: auto;
            cursor: pointer;
            background-color: white      
        }
        
        .mainBox {
            height : 875px;
            margin-bottom: 30px;
        }
        
        .banner {
            height: 150px;
            background-color: white;
            display: block;
            margin: auto;
            width: 200px; 
        }

        .btn_banner {
            background: transparent; 
            border: 0 solid black;
            padding-top: 10px;
            float: right;
        }

        .top_banner {
            padding-top: 10px;
            height: 30px;
            width: 100%
        }
        
    </style>
    <script>
        // 로그인 상태면 '로그아웃' 버튼만 출력
        $(document).ready(function () {
            show();
        });
        
        function show( ){
            if (localStorage.length == 0) {
                $('#check_btn').append(` <button id='login' class='btn_banner btn btn-outline-secondary' onclick='window.location.href="/login"' type="button">로그인</button>
                                        <button id='signin' class='btn_banner btn btn-outline-secondary' onclick='window.location.href="/signup"' type="button">회원가입</button>`)
            // 비로그인 상태라면 '로그인', '회원가입' 버튼 출력
            } else {
                $('#check_btn').append(`<button class='btn_banner' onclick='logout()' type="button">로그아웃</button>`)
            }

        }
      

        function logout() {
            localStorage.clear();
            $.ajax({
                type: 'POST',
                url: `/api/logout`,
                success: function (response) {
                    window.location.reload();
                    alert('로그아웃 되었습니다.')
                }
            })
        }

    </script>
    
