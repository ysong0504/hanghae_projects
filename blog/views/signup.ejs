    <script>

        if (localStorage.length > 0) {
            console.log(localStorage)
            alert('이미 로그인이 되어있습니다. 메인 페이지로 이동합니다.')
            window.location.href="/"
        }


        function signup() {
            $.ajax({
                type: 'POST',
                url: `/api/users`,
                data: {
                    userId: $('#id').val(),
                    password: $('#pw').val(),
                    nickname: $('#nickname').val(),
                    confirmPassword: $('#pw_confirmation').val(),
                },
                success: function (response) {
                    alert('회원가입성공 :', response)
                    console.log('성공: ' , response)
                    if (response['result'] == 'success') {
                        window.location.href='/login'
                    }
                }, error: function (response) {
                    console.log('실패: ' , response.responseJSON)
                        alert(response.responseJSON.errorMessage)
                        location.reload()
                    }
            })
        }
    </script>

</head>

<body>
    <div class="wrap ">
        <form class="col-md-13">
            <div class="col-md-13">
              <label for="validationDefault01" class="form-label">아이디</label>
              <input type="text" class="form-control" id="id"  required>
              <p>※ 3자 이상, 알파벳과 숫자를 꼭! 포함해주세요>< </p>
            </div>
            <div class="col-md-13">
              <label for="validationDefault02" class="form-label">닉네임</label>
              <input type="text" class="form-control" id="nickname"  required>
              <p>※ 1자 이상 </p>
            </div>
            <div class="col-md-13">
              <label for="validationDefault03" class="form-label">비밀번호</label>
              <input type="password" class="form-control" id="pw" required>
              <p>※ 4자 이상 & 아이디 포함ㄴㄴ</p>
            </div>
            <div class="col-md-13">
                <label for="validationDefault03" class="form-label">비밀번호 확인</label>
                <input type="password" class="form-control" id="pw_confirmation" required>
                <p></p>
              </div>
           
            <div class="col-13">
              <button class="btn btn-secondary" onclick="signup()" type="button">회원가입</button>
              <button class="btn btn-secondary" onclick="window.location.href='login'" type="button">로그인 하러가기</button>
              <h6 style="margin-top: 10px; cursor: pointer;" onclick="window.location.href='/'">🧾 로그인없이 보러가기</h6>
            </div>
